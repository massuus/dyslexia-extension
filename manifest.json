{
  "manifest_version": 3,
  "name": "Dyslexia NLP Helper (MVP)",
  "version": "0.3",
  "description": "Highlights difficult words and shows context-aware explanations.",

  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],

  "host_permissions": [
    "https://api.openai.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Dyslexia NLP Helper",
    "default_popup": "popup.html"
  },

"content_scripts": [
  {
    "matches": ["<all_urls>"],
    "run_at": "document_idle",
    "js": [
      "secret.js",
      "common-words.js",
      "content/api.js",
      "content/cache.js",
      "content/explain.js",
      "content/overlay.js",
      "content/typography.js",
      "content/bionic.js",
      "content/embed.js",
      "content/main.js",
      "content/qa-widget.js",
      "math.js"
    ],
    "css": ["styles.css"]
  }
],

"web_accessible_resources": [
  {
    "resources": [
      "assets/fonts/OpenDyslexic-Regular.woff2",
      "assets/fonts/LexendDeca-VariableFont.woff2"
    ],
    "matches": ["<all_urls>"]
  }
]
}
