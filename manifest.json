{
  "manifest_version": 3,
  "name": "Dyslexia NLP Helper (MVP)",
  "version": "0.3",
  "description": "Highlights difficult words and shows context-aware explanations.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"            
  ],
  "background": {
  "service_worker": "background.js"
},
  "action": {            
    "default_popup": "popup.html",
    "default_title": "Dyslexia NLP Helper"
  },
  "host_permissions": [
  "https://api.openai.com/*"
],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "secret.js",          
        "common-words.js",
        "content.js",
        "math.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/fonts/OpenDyslexic-Regular.woff2",
        "assets/fonts/LexendDeca-VariableFont.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
